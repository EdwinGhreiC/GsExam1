<% content_for :css do %>
  <style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>
<% end %>

  <script>
  $(document)
    .ready(function() {
      $('.ui.form')
        .form({
          fields: {
            session_name: {
              identifier  : 'session_name',
              rules: [
                {
                  type   : 'empty',
                  prompt : '请输入账号名称'
                }
              ]
            },
            session_password: {
              identifier  : 'session_password',
              rules: [
                {
                  type   : 'empty',
                  prompt : '请输入密码'
                },
                {
                  type   : 'length[4]',
                  prompt : '密码至少要有4位'
                }
              ]
            }
          }
        })
      ;
    })
  ;
  </script>
  <div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag 'logo.png', :class=>'image' %>
      <div class="content">
        登录你的账号
      </div>
    </h2>
	<%= form_for(:session, url: '/login', :html=>{:class=>'ui large form'})  do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name, :placeholder=>'姓名' %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
			<%= f.password_field :password, :placeholder=>'密码' %>
          </div>
        </div>
        <div class="ui fluid large teal submit button">登　录</div>
      </div>

      <div class="ui error message"></div>

	<% end %>

    <div class="ui message">
      忘记密码了吗? <a href="#">点击找回</a>
    </div>
  </div>
</div>